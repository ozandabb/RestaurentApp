<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRestaurantActivity">
    <RelativeLayout
        android:id="@+id/rel00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/add_post_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel01"
        android:layout_below="@+id/rel00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/addPostImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:srcCompat="@drawable/addimage" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel000"
        android:layout_below="@id/rel01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="16dp"
            android:text="Add Restaurant Details"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel02"
        android:layout_below="@id/rel000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/addPostText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="Enter Restaurant Name"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel021"
        android:layout_below="@id/rel02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/addPostText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="Enter District"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel0200"
        android:layout_below="@id/rel021"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="16dp"
            android:text="Add Restaurant Details"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relgeo1"
        android:layout_below="@id/rel0200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/LatitudeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="Latitude : 5.923779"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relgeo2"
        android:layout_below="@id/relgeo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/Longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="Longitude : 80.544517"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel03"
        android:layout_below="@id/relgeo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/post_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:text="Next"
            />
    </RelativeLayout>


</RelativeLayout>